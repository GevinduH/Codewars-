http://www.codewars.com/kata/remove-first-and-last-character-part-two
function array(string) {
	let arr= string.split(',');
	if (arr.length > 2) {
		arr.pop();
		arr.shift();
		arr=arr.join(' ');
		return arr;
	}return null	
}

http://www.codewars.com/kata/implement-array-dot-prototype-dot-filter-1
Array.prototype.filter = function (func) {
  const arr = [];
  for (let i=0;i<this.length;i++){
 		  if (func(this[i])) {
        arr.push(this[i]);
      }
	}
  return arr;
}

http://www.codewars.com/kata/cross-product-of-vectors
function crossProduct(vector1, vector2) {
	if (!Array.isArray(vector1) || !Array.isArray(vector2) || vector1.length !== 3 || vector2.length !== 3) {
			throw ("Arguments are not 3D vectors!");
		}
	const arr=[]
	arr[0] = vector1[1] * vector2[2] - vector1[2] * vector2[1];
	arr[1] = vector1[2] * vector2[0] - vector1[0] * vector2[2];
	arr[2] = vector1[0] * vector2[1] - vector1[1] * vector2[0];
	return arr
}

